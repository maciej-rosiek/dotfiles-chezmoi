## Manual management of external displays
# Set the shortcuts and what they do
set $mode_display Laptop + UW Monitor 1440p (1) | Laptop (2) | Laptop + Monitor 1080p (3) | Monitor 1080p only (4) | Laptop + LG (5)
mode "$mode_display" {
    bindsym 1 exec --no-startup-id ~/.screenlayout/home-wide.sh && imwheel; mode "default"
    bindsym 2 exec --no-startup-id ~/.screenlayout/laptop.sh && pkill imwheel; mode "default"
    bindsym 3 exec --no-startup-id ~/.screenlayout/home-1080p.sh && imwheel; mode "default"
    bindsym 4 exec --no-startup-id ~/.screenlayout/home-1080p-only.sh && imwheel; mode "default"
    bindsym 5 exec --no-startup-id ~/.screenlayout/home-wide-lg.sh && imwheel; mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# Declare here the shortcut to bring the display selection menu
bindsym $mod+Shift+x mode "$mode_display"

