#exec --no-startup-id $i3-wm.program.unclutter

set $mode_compositor Compositor: On (1) | Off (2) | Restart (3)P
mode "$mode_compositor" {
    bindsym 1 exec --no-startup-id picom --config ~/.config/regolith/picom/config; mode "default"
    bindsym 2 exec --no-startup-id pkill picom; mode "default"
    bindsym 3 exec --no-startup-id pkill picom &&R picom --config ~/.config/regolith/picom/config; mode "default"
}

bindsym $mod+Shift+p mode "$mode_compositor"

